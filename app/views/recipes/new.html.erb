<%= form_for @recipe do |rar| %>
  <%= rar.label :title %>
  <%= rar.text_field :title %><br>

  <%= rar.fields_for :ingredients do |ingredient| %>
    <%= ingredient.label :name %>
    <%= ingredient.text_field :name %><br>

    <%= ingredient.label :quantity %>
    <%= ingredient.text_field :quantity %><br>
  <% end %>

  <%= rar.submit %>

<% end %>
